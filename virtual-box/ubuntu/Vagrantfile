# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
# inizio prima vm

 config.vm.define "vm1" do |vm1|
  vm1.vm.box = "ubuntu/xenial64"
  vm1.ssh.insert_key = false
  vm1.vm.hostname = "vm1"
  vm1.vm.network :private_network, ip: "192.168.33.101"
 end


  config.vm.provider :virtualbox do |v|
    v.name = "ubuntu1"
    v.memory = 1024
    v.cpus = 2
  end

# inizio seconda vm
 config.vm.define "vm2" do |vm2|
  vm2.vm.box = "ubuntu/xenial64"
  vm2.ssh.insert_key = false
  vm2.vm.hostname = "vm2"
  vm2.vm.network :private_network, ip: "192.168.33.102"
 end

  config.vm.provider :virtualbox do |v|
    v.name = "ubuntu2"
    v.memory = 1024
    v.cpus = 2
  end

end